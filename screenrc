backtick 1 1 0 "$HOME/.bin/screen-battery-percentage"

hardstatus alwayslastline "%{b kw}%H %{w}| %{g}%c %{w}| %{-b kw}%u %-w%{= rW}%50> %n%f %t %{-}%+w%< %= %1`"

startup_message off
vbell off

bindkey ^[[1;2D prev # shift-left
bindkey ^[[1;2C next # shift-right
bindkey ^[[1;2B screen # shift-down

bindkey ^[[1;6D number -1 # ctrl-shift-left
bindkey ^[[1;6C number +1 # ctrl-shift-right

bindkey ^T title # ctrl-shift-t

termcapinfo xterm* ti@:te@
altscreen on
