alias rm='rm -I'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

alias mkdir='mkdir -pv'
alias ..='cd ..'
alias open='xdg-open'
alias dd='dcfldd'
alias nano='nano -EFH -T 4'

alias ls='ls -lh --color'
alias du='du -h'
alias df='df -h'

alias update='sudo apt-get update && sudo apt-get dist-upgrade'
alias install='sudo apt-get install'
alias remove='sudo apt-get remove'
alias purge='sudo apt-get purge'
alias autoremove='sudo apt-get autoremove'

alias logout='gnome-session-quit --no-prompt'
alias reload='source $HOME/.bashrc'
alias c='clear'

alias dropbox-uploader='/opt/Dropbox-Uploader/./dropbox_uploader.sh'
alias drop-shell='/opt/Dropbox-Uploader/./dropShell.sh'
alias python='python3'

alias clbin='curl -F "clbin=<-" https://clbin.com'
alias wanip='curl icanhazip.com'

alias keys="xev | grep -A2 --line-buffered '^KeyRelease' | sed -n '/keycode /s/^.*keycode \([0-9]*\).* (.*, \(.*\)).*$/\1 \2/p'"

alias update-respawn='ssh respawn sudo /www/update content'
alias olls_proxy='ssh -D 8080 guest@dev.oliverfaircliff.com -f -N'

function node-deploy {
    cd /var/node/$1
    forever start -a -l forever.log -o out.log -e err.log index.js
}

export www=~/repos/www/projects
